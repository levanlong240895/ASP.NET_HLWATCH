@model List<HoangLongWatch.Models.CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section jsFooter{
    <script src="/assets/client/js/controller/cartController.js"></script>
    }

<section class="page-add cart-page-add">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="page-breadcrumb">
                    <h2>Cart<span>.</span></h2>
                    <a href="#">Home</a>
                    <a href="#">Dresses</a>
                    <a class="active" href="#">Night Dresses</a>
                </div>
            </div>
            <div class="col-lg-8">
                <img src="/assets/client/img/add.jpg" alt="">
            </div>
        </div>
    </div>
</section>
<!-- Page Add Section End -->
<!-- Cart Page Section Begin -->
<div class="cart-page">
    <div class="container">
        <div class="cart-table">
            <table>
                <thead>
                    <tr>
                        <th class="product-h">Product</th>
                        <th>Price</th>
                        <th class="quan">Quantity</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="product-col">
                                <img src="/assets/client//img/products/@(item.Product.Image).jpg" alt="">
                                <div class="p-title">
                                    <h5>@item.Product.Name</h5>
                                </div>
                            </td>
                            <td class="price-col">$@item.Product.Price</td>
                            <td class="quantity-col">
                                <div class="pro-qty">
                                    <input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity">
                                </div>
                            </td>
                            <td class="total">$@(item.Quantity * item.Product.Price)</td>
                            <td class="d-flex">
                                <button type="button"  class="btn site-btn btn-success text-white mr-lg-1 border-secondary ">Update</button>
                                <button type="button" data-id="@item.Product.ID" class="btn site-btn btn-danger text-white ml-lg-1 border-secondary btnDelete">Delete</button>
                                @*x*@
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @{
            if (Model.Count > 0)
            {
                <div class="cart-btn">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="coupon-input">
                                <input type="text" placeholder="Enter cupone code">
                            </div>
                        </div>
                        <div class="col-lg-5 offset-lg-1 text-left text-lg-right">
                            <div id="btnDeleteAll" class="site-btn clear-btn">Clear Cart</div>
                            <div id="btnUpdate" class="site-btn update-btn">Update Cart</div>
                        </div>
                    </div>

                </div>
            }
            else
            {
                <div class="alert alert-danger" role="alert">
                    Do not have any product!
                </div>
            }
        }

    <div class="row mt-3 justify-content-end">
        <div id="btnPayment" class="site-btn clear-btn mr-3">Thanh toán</div>
        <div id="btnContinue" class="site-btn clear-btn mr-3">Tiếp tục mua hàng</div>
    </div>
    </div>
    <div class="shopping-method">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shipping-info">
                        <h5>Choose a shipping</h5>
                        <div class="chose-shipping">
                            <div class="cs-item">
                                <input type="radio" name="cs" id="one">
                                <label for="one" class="active">
                                    Free Standard shhipping
                                    <span>Estimate for New York</span>
                                </label>
                            </div>
                            <div class="cs-item">
                                <input type="radio" name="cs" id="two">
                                <label for="two">
                                    Next Day delievery $10
                                </label>
                            </div>
                            <div class="cs-item last">
                                <input type="radio" name="cs" id="three">
                                <label for="three">
                                    In Store Pickup - Free
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="total-info">
                        <div class="total-table">
                            <table>
                                <thead>
                                    <tr>
                                        <th>Total</th>
                                        <th>Subtotal</th>
                                        <th>Shipping</th>
                                        <th class="total-cart">Total Cart</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td class="total">$29</td>
                                        <td class="sub-total">$29</td>
                                        <td class="shipping">$10</td>
                                        <td class="total-cart-p">$39</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 text-right">
                                <a href="#" class="primary-btn chechout-btn">Proceed to checkout</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Cart Page Section End -->
