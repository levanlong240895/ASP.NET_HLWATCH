@model List<Model.EF.Product>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="page-add">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="page-breadcrumb">
                    <h2>Shirts<span>.</span></h2>
                    <a href="#">Home</a>
                    <a href="#">Dresses</a>
                    <a class="active" href="#">Night Dresses</a>
                </div>
            </div>
            <div class="col-lg-8">
                <img src="/assets/client/img/add.jpg" alt="">
            </div>
        </div>
    </div>
</section>
<!-- Page Add Section End -->\
<!-- Related Product Section Begin -->
<section class="related-product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="section-title">
                    <h2>Related Products</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-sm-6 mix all dresses bags">
                    <div class="single-product-item">
                        <figure>
                            <a href="/san-pham/@item.MetaTitle-@item.ID"><img src="/assets/client/img/products/@(item.Image).jpg" alt=""></a>
                            <div class="p-status @item.Description">@item.Description</div>
                        </figure>
                        <div class="product-text">
                            <h6>@item.Name</h6>
                            <p>$@item.Price</p>
                        </div>
                    </div>
                </div>
            }
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (ViewBag.TotalPage > 1)
                    {
                        var pageDisplay = (int)(ViewBag.MaxPage);
                        int totalPage = (int)ViewBag.TotalPage;
                        int currentPage = ((int)ViewBag.Page);

                        //Create numeric links

                        var startPageIndex = Math.Max(1, currentPage - pageDisplay / 2);
                        var endPageIndex = Math.Min(totalPage, currentPage + pageDisplay / 2);

                        var link = "/san-pham";

                        //if (currentPage > ViewBag.First)
                        //{
                            <li class="page-item">
                                <a href="@(link)?page=@ViewBag.First" title="Trang đầu" class="first page-link">Trang đầu</a>
                            </li>
                            <li class="page-item">
                                <a href="@(link)?page=@ViewBag.First" title="Trang trước" class="prev page-link"><i class="fa fa-angle-left"></i></a>
                            </li>
                        //}
                        for (int i = startPageIndex; i <= endPageIndex; i++)
                        {
                            if (currentPage == i)
                            {
                                <li class="page-item active">
                                    <a href="@(link)?page=@i" class="page-link" title="Trang @i">@i</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a href="@(link)?page=@i" class="page-link" title="Trang @i">@i</a>
                                </li>
                            }
                        }
                        //if (currentPage < totalPage)
                        //{
                            <li class="page-item">
                                <a href="@(link)?page=@ViewBag.Next" title="Trang sau" class="next page-link"><i class="fa fa-angle-right"></i></a>
                            </li>
                            <li class="page-item">
                                <a href="@(link)?page=@ViewBag.Last" title="Trang cuối" class="last page-link">Trang cuối</a>
                            </li>
                        //}


                    }
                    else
                    {
                        <span>Không có bản ghi nào!</span>
                    }
                </ul>
            </nav>
        </div>
    </div>
</section>
<!-- Related Product Section End -->
