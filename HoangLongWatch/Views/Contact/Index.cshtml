@model Model.EF.Contact
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section jsFooter{
    <script src="https://maps.googleapis.com/maps/api/js"></script>
    <script src="/assets/client/js/controller/contactController.js"></script>
    <script>
        var map;
        function initMap() {
            map = new google.maps.Map(document.getElementById('map'), {
                center: { lat: 21.029748, lng: 105.823269 },
                zoom: 8
            });
        }
        initMap();
    </script>
    @*<script src="https://maps.googleapis.com/maps/api/js?callback=initMap"></script>*@
}

<div class="container bg-">
    <div class="row">
        <div class="col-md-12 d-flex">
            <div class="col-md-6">
                <h2 class=" text-center mb-4">Thông tin liên hệ</h2>
                @Html.Raw(Model.content)
                <h2 class=" text-center mb-4">Gửi thông tin</h2>
                <form>
                    <div class="form-group">
                        <label>Họ tên</label>
                        <input type="text" id="txtName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Điện thoại</label>
                        <input type="text" id="txtMobile" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Địa chỉ</label>
                        <input type="text" id="txtAddress" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="text" id="txtEmail" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Yêu cầu</label>
                        <textarea id="txtContent" class="form-control"></textarea>
                    </div>
                    <button id="btnSend" class="btn btn-success mb-5">Gửi đi</button>
                </form>
            </div>
            <div class="col-md-6">
                <h2 class="text-center mb-4">Bản đồ</h2>
                <div class="map" id="map" style="height: 600px; width: 100%;">

                </div>
            </div>
        </div>
    </div>
</div>


